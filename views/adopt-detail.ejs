                    line-height: 1.7;
                    margin-bottom: 30px;
                }

                .pet-details-grid {
                    display: grid;
                    grid-template-columns: 1fr 1fr;
                    gap: 20px;
                    margin-bottom: 30px;
                }

                .detail-item {
                    display: flex;
                    align-items: center;
                    gap: 12px;
                    padding: 15px;
                    background: var(--bg-main);
                    border-radius: 12px;
                }

                .detail-icon {
                    font-size: 1.5rem;
                }

                .detail-label {
                    display: block;
                    font-size: 0.8rem;
                    color: var(--text-secondary);
                }

                .detail-value {
                    font-weight: 600;
                    color: var(--text-primary);
                }

                .adopt-actions {
                    display: flex;
                    gap: 15px;
                }

                .btn-lg {
                    padding: 16px 32px;
                    font-size: 1.1rem;
                }

                .btn-outline-gray {
                    background: transparent;
                    border: 2px solid var(--border);
                    color: var(--text-secondary);
                }

                .btn-outline-gray:hover {
                    border-color: var(--primary);
                    color: var(--primary);
                }

                @media (max-width: 768px) {
                    .pet-detail-grid {
                        grid-template-columns: 1fr;
                        gap: 30px;
                    }

                    .pet-name {
                        font-size: 2rem;
                    }

                    .pet-details-grid {
                        grid-template-columns: 1fr;
                    }

                    .adopt-actions {
