                            }
                        });
                    });
                }

                // Share button
                const shareBtn = document.getElementById('shareBtn');
                if (shareBtn) {
                    shareBtn.addEventListener('click', () => {
                        if (navigator.share) {
                            navigator.share({
                                title: '<%= pet.name %> - Pet Helper',
                                text: '<%= pet.description || "" %>',
                                url: window.location.href
                            });
                        } else {
