                    color: var(--primary);
                    font-weight: 500;
                    margin-bottom: 30px;
                }

                .back-link:hover {
                    text-decoration: underline;
                }

                .pet-detail-grid {
                    display: grid;
                    grid-template-columns: 1fr 1fr;
                    gap: 50px;
                    align-items: start;
                }

                .pet-image-section {
                    position: relative;
                }

                .pet-main-image {
                    width: 100%;
                    border-radius: 20px;
                    box-shadow: var(--shadow-lg);
                }

                .pet-status-badge {
                    position: absolute;
                    top: 20px;
                    left: 20px;
                    padding: 8px 16px;
                    border-radius: 20px;
                    font-size: 0.85rem;
                    font-weight: 600;
                    background: white;
                }

                .pet-species-tag {
